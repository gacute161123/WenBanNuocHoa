@model PagedList.IPagedList<BanNuocHoa.Models.SANPHAM>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Allsanpham";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/PagedList.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="~/coloshop-master/styles/bootstrap4/bootstrap.min.css">
<link href="~/coloshop-master/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
<link rel="stylesheet" type="text/css" href="~/coloshop-master/plugins/OwlCarousel2-2.2.1/owl.carousel.css">
<link rel="stylesheet" type="text/css" href="~/coloshop-master/plugins/OwlCarousel2-2.2.1/owl.theme.default.css">
<link rel="stylesheet" type="text/css" href="~/coloshop-master/plugins/OwlCarousel2-2.2.1/animate.css">
<link rel="stylesheet" type="text/css" href="~/coloshop-master/plugins/jquery-ui-1.12.1.custom/jquery-ui.css">
<link rel="stylesheet" type="text/css" href="~/coloshop-master/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/coloshop-master/styles/categories_responsive.css">

<div class="super_container">

    <!-- Header -->



    <div class="fs_menu_overlay"></div>

    <!-- Hamburger Menu -->


    <div class="container product_section_container">
        <div class="row">
            <div class="col product_section clearfix">

                <!-- Breadcrumbs -->

                <div class="breadcrumbs d-flex flex-row align-items-center" style="margin-bottom:30px">
                    <ul>
                        <li><a href="@Url.Action("Index","Home")">Home</a></li>
                        <li class="active"><a href=""><i class="fa fa-angle-right" aria-hidden="true"></i>Tất cả sản phẩm</a></li>
                    </ul>
                </div>

                <!-- Sidebar -->


                <div class="sidebar">
                    <div class="sidebar_section">
                        <div class="sidebar_title">
                            <h5>DANH MỤC</h5>
                        </div>
                        <ul class="sidebar_categories">

                            <li class="active"><a href="/SANPHAM/Allsanpham/"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>Tất cả sản phẩm</a></li>
                            <li><a href="/SANPHAMs?catid=1/">Combo Ưu Đãi</a></li>
                            <li><a href="/SANPHAMs?catid=2/">Nước Hoa Nam</a></li>
                            <li><a href="/SANPHAMs?catid=3/">Nước Hoa Nữ</a></li>

                        </ul>
                    </div>

                    <!-- Price Range Filtering -->
                    <!-- Sizes -->


                </div>

                <!-- Main Content -->

                <div class="main_content">
                    <h3 class="text-center">
                        TẤT CẢ SẢN PHẨM
                    </h3>

                    <!-- Products -->

                    <div class="products_iso">
                        <div class="row">
                            <div class="col">
                                <div class="product-grid" style="margin-top: 15px; position: relative; height: 1800px;" data-isotope='{ "itemSelector": ".product-item", "layoutMode": "fitRows" }'>

                                    @foreach (var item in Model)
                                    {

                                        <!-- Product 1 -->

                                        <div class="product-item men">
                                            <div class="product discount product_filter">
                                                <div class="product_image">
                                                    <a href="@Url.Action("Details","SANPHAMs", new {id=item.Sanpham_ID})"><img src="@item.Sanpham_anh" alt="" style="width:220px; height:220px"></a>
                                                </div>
                                                <div class="product_bubble product_bubble_left product_bubble_green d-flex flex-column align-items-center"><span>new</span></div>

                                                <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>0%</span></div>
                                                <div class="product_info">
                                                    <h6 class="product_name"><a href="@Url.Action("Details","SANPHAMs", new {id=item.Sanpham_ID})">@item.Sanpham_ten</a></h6>
                                                    <div class="product_price"> <a href="@Url.Action("Details","SANPHAMs", new {id=item.Sanpham_ID})" style="color: #e42344; ">  @item.Sanpham_gia đ</a></div>
                                                </div>
                                            </div>
                                            <div class="red_button add_to_cart_button"><a href="@Url.Action("Details","SANPHAMs", new {id=item.Sanpham_ID})">CHI TIẾT SẢN PHẨM</a></div>
                                        </div>


                                    }<!-- Product 2 -->


                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="">

                        @Html.PagedListPager(Model, page => Url.Action("Allsanpham",
                        new { page, SortOrder = ViewBag.CurrentSort, CurrentStr = ViewBag.CurrentStr }))
                    </div>
                </div>
            </div>

        </div>

    </div>


</div>

















<script src="~/coloshop-master/js/jquery-3.2.1.min.js"></script>
<script src="~/coloshop-master/styles/bootstrap4/popper.js"></script>
<script src="~/coloshop-master/styles/bootstrap4/bootstrap.min.js"></script>
<script src="~/coloshop-master/plugins/Isotope/isotope.pkgd.min.js"></script>
<script src="~/coloshop-master/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
<script src="~/coloshop-master/plugins/easing/easing.js"></script>
<script src="~/coloshop-master/plugins/jquery-ui-1.12.1.custom/jquery-ui.js"></script>
<script src="~/coloshop-master/js/categories_custom.js"></script>